<div class="h-title">クラシファイドの詳細</div>  
<div class="text-right">
  <%= link_to '一覧に戻る', c_boards_path, class: "btn btn-info" %>
</div>

<div class="jumbotron back-jumbo">
  <h2 class="text-left title well">
  <%= @c_board.title %>
  </h2>
  <div class=" small labelsmall text-right"> 
  更新日：<%= @c_board.updated_at %> <span class="label label-success"><%= @c_board.area.name %></span> <spam class="label label-info"><%= @c_board.category.name %></span>  
  </div>
  <div class="labelinfo text-right">
    投稿者名：<%= @c_board.user.name %> 
    TEL：<% if @c_board.tel? %>
           <%= @c_board.tel %>
         <% else %>
           N/A
         <% end %>
    <%= link_to "メールはこちら", c_board_inquiry_path(@c_board), class: "btn btn-danger" %>
  
  </div>
  <% if @c_board.image? %>
  <div id="CjCarousel" class="carousel slide" data-ride="carousel">
  	<ol class="carousel-indicators">
  		<li class="active" data-target="#CjCarousel" data-slide-to="0"></li>
  		<% if @c_board.s_image? %>
  		<li data-target="#CjCarousel" data-slide-to="1"></li>
  		<% end %>
  		<% if @c_board.t_image? %>
  		<li data-target="#CjCarousel" data-slide-to="2"></li>
  		<% end %>
  		<% if @c_board.f_image? %>
  		<li data-target="#CjCarousel" data-slide-to="3"></li>
  		<% end %>
    </ol>
  	<div class="carousel-inner" role="listbox">
  		<div class="item active">
  			<%= image_tag @c_board.image.url.to_s %>
  		</div>
  		<% if @c_board.s_image? %>
  		<div class="item">
  		  <%= image_tag @c_board.s_image.url.to_s %>
  		</div>
  		<% end %>
  		<% if @c_board.t_image? %>
  		<div class="item">
  		  <%= image_tag @c_board.t_image.url.to_s %>
  		</div>
  		<% end %>
  		<% if @c_board.f_image? %>
  		<div class="item">
  		  <%= image_tag @c_board.f_image.url.to_s %>
  		</div>
  		<% end %>
  	</div>
  	<a class="left carousel-control" href="#CjCarousel" role="button" data-slide="prev">
  		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  		<span class="sr-only">前へ</span>
  	</a>
  	<a class="right carousel-control" href="#CjCarousel" role="button" data-slide="next">
  		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  		<span class="sr-only">次へ</span>
  	</a>
  </div>
  <% end %>
  
  
  <div class="details">
    <h3>詳細</h3>
    <p class="content-show"><%= @c_board.content %></p>
  </div>
  
  <div class="ad-post text-center">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- cj-post -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:300px;height:250px"
         data-ad-client="ca-pub-5902955087719107"
         data-ad-slot="4514458456"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    <span class="sp-none">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- cj-post -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:300px;height:250px"
             data-ad-client="ca-pub-5902955087719107"
             data-ad-slot="4514458456"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </span>
  </div>
</div>

  <div class="text-center edit-del">
   
      <%= link_to 'このメッセージを編集する', edit_c_board_path(@c_board), class: "btn btn-primary" %>
  
      <%= link_to 'このメッセージを削除する', @c_board, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %>
  </div>
  
</div>
