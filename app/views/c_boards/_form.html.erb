<%= form_for(c_board) do |f| %>

  <% if c_board.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% c_board.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<h2 class="form-head">新規投稿</h2>

<div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :area, 'エリア' %>
  <%= f.collection_select :area_id, Area.all, :id, :name, class: 'form-control', :include_blank => true %>
</div>

<div class="form-group">
  <%= f.label :category, 'カテゴリー' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, class: 'form-control', :include_blank => true %>
</div>

<div class="form-group">  
  <%= f.label :tel, '電話番号' %>
  <%= f.text_field :tel, class: 'form-control' %>
</div>
  
<div class="form-group">  
  <%= f.label :content, '詳細' %>
  <%= f.text_field :content, class: 'form-control' %>
</div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>　<%= link_to '一覧に戻る', c_boards_path, class: 'btn btn-default' %>
<% end %>
