<header>
  <!-- logo -->
  <div class="header-top">
    <span class="logo">
      <a href="/"><img src="/images/CJcloud-logo2.png" alt="CJ cloud"></a>
    </span>
    <span class="top-right">
      <%= link_to '<i class="glyphicon glyphicon-th-list"></i> 新規投稿'.html_safe, new_c_board_path, class: "btn btn-success" %>
      <% if logged_in? %>
      <%= link_to '<i class="glyphicon glyphicon-list-alt"></i> My profile'.html_safe, user_path(current_user), class: "top-sign btn btn-info sp-none" %>
      <% else %>
      <%= link_to '<i class="glyphicon glyphicon-thumbs-up"></i> Signup'.html_safe, signup_path, class: "top-sign btn btn-info sp-none" %>
      <% end %>
    </span>
  </div>
  <!-- Static navbar -->
  <div class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
      </div>
     <div class="navbar-collapse collapse">
       <ul class="nav navbar-nav">
       <li class="nav-icon"><a href="/"><i class="glyphicon glyphicon-home"></i> Home</a></li>
       <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-pencil"></i> 掲示板'.html_safe, boards_path %></li>
       <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-th-list"></i> クラシファイド'.html_safe, c_boards_path %></li>
       <li class="nav-icon"><a href="https://afficana.com"><i class="glyphicon glyphicon-book"></i> BLOG</a></li>
       <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-envelope"></i> Contact'.html_safe, inquiry_path %></li>
       <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle nav-icon nav-end" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-user"></i> <%= current_user.name %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li class="nav-icon">
                    <% if current_user.admin_flag? %>
                      <%= link_to '<i class="glyphicon glyphicon-list-alt"></i> Admin'.html_safe, admin_users_path %>
                    <% else %>
                      <%= link_to '<i class="glyphicon glyphicon-list-alt"></i> My profile'.html_safe, user_path(current_user) %>
                    <% end %>
                    </li>
                  <li role="separator" class="divider"></li>
                  <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-log-out"></i> Logout'.html_safe, logout_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-thumbs-up"></i> Signup'.html_safe, signup_path %></li>
              <li class="nav-icon"><%= link_to '<i class="glyphicon glyphicon-log-in"></i> Login'.html_safe, login_path %></li>
       <% end %>
       </ul>
     </div>
   </div>
  </div>
</header>