<h2 class="form-head">
  新規投稿
</h2>
<div class="container">
  <div class="row">
    <div class="jumbotron col-md-6 col-md-offset-3 back-jumbo">
      <%= form_for(board) do |f| %>
  
        <% if board.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% board.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="container form-cboard">
          <div class="form-group">
            <%= f.label :title, 'タイトル' %>
            <%= f.text_field :title, class: 'form-control', placeholder: 'title' %>
          </div>
          
          <div class="form-group">
            <%= f.label :b_area, 'エリア' %>
            <%= f.collection_select :b_area_id, BArea.all, :id, :name, {:prompt => "選択"}, {class: "form-control"} %>
          </div>
          
          <div class="form-group">
            <%= f.label :b_category, 'カテゴリー' %>
            <%= f.collection_select :b_category_id, BCategory.all, :id, :name, {:prompt => "選択"}, {class: "form-control"} %>
          </div>
            
          <div class="form-group">  
            <%= f.label :content, '詳細' %>
            <%= f.text_area :content, class: 'form-control', placeholder: 'details', rows: 10 %>
          </div>
          
          
          <div class="form-group">
            <%= f.check_box :agreement, :as => :boolean, checked:false %>
            <%= link_to "利用規約", terms_of_use_path %>と<%= link_to "プライバシーポリシー", policy_path %>に同意する
          </div>
        </div>
        
        <%= f.submit '投稿', class: 'btn btn-primary f-btn' %>　<%= link_to '一覧に戻る', boards_path, class: 'btn btn-default f-btn' %>
      <% end %>
    </div>
  </div>
</div>


