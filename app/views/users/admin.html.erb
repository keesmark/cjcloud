<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>User</h2>
      <ul>
        <% @users.each do |user| %>
        <li><%= user.id %>:<%= user.email %><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %></li>
        <% end %>
      </ul>
      <h2>クラシファイド</h2>
      <ul>
        <% @c_boards.each do |c_board| %>
        <li><%= c_board.id %>:<%= c_board.title %><%= link_to '削除', c_board, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %></li>
        <% end %>
      </ul>
      <h2>掲示板</h2>
      <ul>
        <% @boards.each do |board| %>
        <li><%= board.id %>:<%= board.title %><%= link_to '削除', board, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %></li>
        <% end %>
      </ul>
      <h2>コメント</h2>
      <ul>
        <% @comments.each do |comment| %>
        <li><%= comment.id %>:<%= comment.title %><%= link_to '削除', comment, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
